<div class="row">
  <h1><%= @robot.name %></h1>
  <div class="col-md-6">
    <img src="<%= @robot.avatar %>">
  </div>
  <div class="col-md-6">
    <h3><strong>City:</strong> <%= @robot.city %></h3>
    <h3><strong>State:</strong> <%= @robot.state %></h3>
    <h3><strong>Birthdate:</strong> <%= @robot.birthdate %> (Age: <%= @robot.age %>)</h3>
    <h3><strong>Date Hired:</strong> <%= @robot.date_hired %></h3>
    <h3><strong>Department:</strong> <%= @robot.department %></h3>

  </div>
</div>
